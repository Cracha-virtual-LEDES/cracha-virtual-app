generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pessoa {
  id        Int     @id @default(autoincrement())
  name      String
  email     String  @unique
  password  String
  isAdmin   Boolean
  photoPath String
  verified  Boolean
  cracha    Cracha?
}

model Cracha {
  id        Int     @id @default(autoincrement())
  color     String
  pessoa    Pessoa  @relation(fields: [pessoaId], references: [id])
  pessoaId  Int     @unique
}
